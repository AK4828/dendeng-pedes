<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:contentPadding="8dp"
        app:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ol_preview"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:layout_toLeftOf="@id/ol_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/ol_preview"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/om_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/om_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order quantity : "/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ol_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_check_circle_white_24dp"
                android:tint="@color/colorAccent"
                android:visibility="gone"/>

            <!--<Spinner-->
                <!--android:id="@+id/om_spin_new_count"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>