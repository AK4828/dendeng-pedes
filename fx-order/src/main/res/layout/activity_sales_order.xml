                        android:layout_marginLeft="16dp" />

                    <TextView android:text="Email" />

                    <EditText
                        android:id="@+id/eu_email"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginLeft="16dp" />

                    <TextView android:text="Telephone" />

                    <EditText
                        android:id="@+id/eu_telephone"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginLeft="16dp" />

                    <TextView android:text="Alamat" />

                    <EditText
                        android:id="@+id/eu_address"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginLeft="16dp"
                        android:minLines="2" />

                </GridLayout>
            </android.support.v7.widget.CardView>

